<!-- Navigation -->
<%= render :partial => 'shared/nav' %>
<div class="container">
	<div style="margin-top: 100px;">
		<h3 style="margin-left: 15px;">Order Details</h3>
		
    <div class="container px-1 px-md-4 py-5 mx-auto">
	    <div class="track_img card">
        <div class="row d-flex justify-content-between px-3 top">
          <div class="d-flex">
            <h5>
              ORDER<span class="text-primary font-weight-bold">&nbsp;&nbsp;<%= @order.transaction_id %></span>
            </h5>
          </div>
          <div class="d-flex flex-column text-sm-right">
            <p class="mb-0">Expected Arrival  &nbsp;<span>25/01/20</span></p>
            <p>Payment &nbsp;<span class="font-weight-bold"><%= @order.payment_id %></span></p>
          </div>
        </div> <!-- Add class 'active' to progress -->
        <div class="row d-flex justify-content-center">
          <div class="col-12">
            <ul id="progressbar" class="text-center">
              <li class="step0 active"> </li>
              <li class="step0 <%= 'active' if @order.order_status == 'Shipped'|| @order.order_status == 'En Route' || @order.order_status == 'Arrived'%>"></li>
              <li class="step0 <%= 'active' if @order.order_status == 'En Route'|| @order.order_status == 'Arrived' %>"></li>
              <li class="step0 <%= 'active' if @order.order_status == 'Arrived' %>"></li>
            </ul>
          </div>
        </div>
        <div class="row justify-content-between top">
          <div class="row d-flex icon-content"> 
            <img class="icon" src="https://i.imgur.com/9nnc9Et.png">
            <div class="d-flex flex-column">
              <p class="font-weight-bold">Order<br>Processed</p>
            </div>
          </div>

          <div class="row d-flex icon-content"> 
            <img class="icon" src="https://i.imgur.com/u1AzR7w.png">
            <div class="d-flex flex-column">
              <p class="font-weight-bold">Order<br>Shipped</p>
            </div>
          </div>

          <div class="row d-flex icon-content">
            <img class="icon" src="https://i.imgur.com/TkPm63y.png">
            <div class="d-flex flex-column">
                <p class="font-weight-bold">Order<br>En Route</p>
            </div>
          </div>
          
          <div class="row d-flex icon-content">
            <img class="icon" src="https://i.imgur.com/HdsziHP.png">
            <div class="d-flex flex-column">
              <p class="font-weight-bold">Order<br>Arrived</p>
            </div>
          </div>
        </div>
	    </div>
    </div>
   
    <div class="@order" id="order_<%=@order.id %>">
	    <div class="row" style="background-color: #f9f9f9;padding: 9px;border: 1px solid #d7d7d7; border-bottom: 0px;">
	    	<div class="col-md-12">
	    		<div class="Order_btn">
	    			Payment Details
	    		</div>
	    	</div>
	    </div>
      <div class="row" style="border: 1px solid #d7d7d7; padding: 15px;">	
		    <div class="col-md-6">
		    	<p> <b> Payment Through: </b> <%= @order.payment_type %> </p>
		    	<p> <b> Payment Status: </b> <%= @order.payment %> </p>
		      <p> <b> Payment id: </b> <%= @order.payment_id %> </p>
		      <p> <b> Ordered on: </b> <%= @order.created_at.to_date %> </p>
		      <p> <b> Transaction id: </b> <%= @order.transaction_id %> </p>
		      <p><b>Total amount: </b><%= @order.amount %></p>
	      </div>
	      <div class="col-md-6">
		      <h4>shipping address</h4>
		     	<b><%= @order.address.full_name %></b><br>
        	<span><%= @order.address.mobile %></span><br>
        	<span><%= @order.address.house_no %></span><br>
        	<span><%= @order.address.street %></span><br>
        	<span><%= @order.address.landmark %></span><br>
        	<span><%= @order.address.city %>,<%= @order.address.pincode %></span><br>
        	<span><%= @order.address.state %></span><br>
	      </div>
      </div>
    </div><br>

    <div class="@order" id="order_<%=@order.id %>">
	    <div class="row" style="background-color: #f9f9f9;padding: 9px;border: 1px solid #d7d7d7; border-bottom: 0px;">
	    	<div class="col-md-12">
	    		<div class="Order_btn">
	    			Products
	    		</div>
	    	</div>
	    </div>

      <div class="row" style="border: 1px solid #d7d7d7; padding: 15px;">
				<div class="col-md-6">
					<div>
		        <% @order.line_items.each do |d| %>
  		        <% d.dish.pictures.each do |p| %>
  	            <%= image_tag(p.image_url, :class => 'order_img') %>
  		        <% end %>
		      </div>
		      <div>
  		        <span><%= d.dish.name %></span>
  		        <span>&#8377; <%= d.dish.price %> &#x2715;</span>
  		        <span><%= d.quantity %></span> <br><br>
		        <% end %>
		      </div>
		    </div>
		    <div class="col-md-6">

        </div>
      </div>

    </div><br>
		  <p align="center"><%= link_to 'Back', :back %></p>
      <p align="center"><%= link_to 'Return to store', :root %></p><br><br><br>
	</div>
</div>

<style>
table, th, td {
  border: 1px solid black;
  border-collapse: collapse;
}
th, td {
  padding: 5px;
  text-align: left;    
}
.order_img{
	height: 70px;
	width: 70px;
}

.order_link {
    background: #2874f0;
    color: #fff;
    box-shadow: none;
    border: 1px solid #2874f0;
    padding: 6px 10px;
    border-radius: 2px;
   
    cursor: pointer;
    text-align: center;
    width: 136px;
}
a:hover{
    text-decoration: none;
    color: inherit;
    border: none;
    outline: none;
    
    
}

.card {
    z-index: 0;
    background-color: #ECEFF1;
    padding-bottom: 20px;
    border-radius: 10px
}

.top {
    padding-top: 15px;
    padding-left: 13% !important;
    padding-right: 13% !important
}

#progressbar {
    margin-bottom: 30px;
    overflow: hidden;
    color: #455A64;
    padding-left: 0px;
    margin-top: 30px
}

#progressbar li {
    list-style-type: none;
    font-size: 13px;
    width: 25%;
    float: left;
    position: relative;
    font-weight: 400
}

#progressbar .step0:before {
    font-family: FontAwesome;
    content: "\f10c";
    color: #fff
}

#progressbar li:before {
    width: 40px;
    height: 40px;
    line-height: 45px;
    display: block;
    font-size: 20px;
    background: #C5CAE9;
    border-radius: 50%;
    margin: auto;
    padding: 0px
}

#progressbar li:after {
    content: '';
    width: 100%;
    height: 12px;
    background: #C5CAE9;
    position: absolute;
    left: 0;
    top: 16px;
    z-index: -1
}

#progressbar li:last-child:after {
    border-top-right-radius: 10px;
    border-bottom-right-radius: 10px;
    position: absolute;
    left: -50%
}

#progressbar li:nth-child(2):after,
#progressbar li:nth-child(3):after {
    left: -50%
}

#progressbar li:first-child:after {
    border-top-left-radius: 10px;
    border-bottom-left-radius: 10px;
    position: absolute;
    left: 50%
}

#progressbar li:last-child:after {
    border-top-right-radius: 10px;
    border-bottom-right-radius: 10px
}

#progressbar li:first-child:after {
    border-top-left-radius: 10px;
    border-bottom-left-radius: 10px
}

#progressbar li.active:before,
#progressbar li.active:after {
    background: #651FFF
}

#progressbar li.active:before {
    font-family: FontAwesome;
    content: "\f00c"
}

.icon {
    width: 60px;
    height: 60px;
    margin-right: 15px;
   transition-property: none !important;
}

.icon-content {
    padding-bottom: 20px
}

@media screen and (max-width: 992px) {
    .icon-content {
        width: 50%
    }
}
</style>