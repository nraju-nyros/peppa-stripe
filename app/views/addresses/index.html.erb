<%= render :partial => 'shared/nav'%>
<div class="container">
  <div class="" style="margin-top: 100px;">
    <%= link_to 'Your Account', user_path(current_user), :class => 'link1'%> &nbsp;<i class="a-breadcrumb-divider">â€º</i>
    <span>Your Addresses</span><hr>

    <div class="row">
      <div class="col-md-4" style="margin-bottom: 15px;">
        <div class = "address_list3" style="padding-top: 150px; text-align: center;">
          <%= link_to 'Add Address', new_address_path(x:1), :class => 'link' %> 
        </div>
        </div>
      <% @addresses.each do |a| %>
      <div class="col-md-4" style="margin-bottom: 15px;">
        <div class = "address_list3">
          <b><%= a.full_name %></b><br>
          <span><%= a.mobile %></span><br>
          <span><%= a.house_no %></span><br>
          <span><%= a.street %></span><br>
          <span><%= a.landmark %></span><br>
          <span><%= a.city %>,<%= a.pincode %></span><br>
          <span><%= a.state %></span><br><br>
          <%= link_to 'Edit', edit_address_path(a, x:1), :class => 'link'%>&nbsp;&nbsp;
          <%= link_to 'Delete', deactivate_address_path(a),:class => 'link', method: :post, data: {confirm: 'Are you sure?'}%>
          <br>
        </div>  
        </div>
      <% end %>
      </div>
  </div>
</div>


