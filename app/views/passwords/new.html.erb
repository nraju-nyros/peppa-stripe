<div class="container" align="center">
  <div class="form-horizontal no-border form u-dimension-2"  style ="margin-top:30px; width: 450px;"align="center" >
	  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
			<p align="center" class="forgot_pwd">Forgot your password?</p>
			<p class="forgot_txt" >We got you. Just enter your email below and we'll send you a link to get in.</p>

	    <div class="form-group">
	      <div class="col-sm-12">
	        <%= f.label :email %>
	          <%= render "devise/shared/error_messages", resource: resource %>
	        <%= f.email_field :email, autofocus: true, class: 'form-control' %>
	      </div>
	    </div>

	    <div class="form-group">
	      <div class="col-sm-12">
	        <%= f.submit "Submit", class: 'submitBtn btn btn-block btn-success btn', id:'sign_in' %>
	     </div>
	    </div>

	    <p align = "center">or</p> 
	 
	    <%= link_to "Create your account", new_user_registration_path%><br>
	    <%= link_to "Log in", new_user_session_path%>
	  <% end %>
	</div>
</div> 






