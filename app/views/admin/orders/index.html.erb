<br>
<div class="container" >
  <nav class="navbar navbar-expand-sm   navbar-light bg-light">
    <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
      <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
        <li class="nav-item">
          <a class="nav-link" href="/admin">Admin panel <span class="sr-only">(current)</span></a>
        </li>
      </ul>
      <div>
        <%= link_to('Logout', destroy_admin_session_path, method: :delete, :class => 'btn btn-danger btn-sm') %>  
      </div>
    </div>
  </nav>
  <table  class="table" >   
    <thead class="thead-light"><br><br>
      <h3>All orders</h3>
      <tr>
        <th>Id</th> 
        <th>Order No</th> 
        <th>Order Date</th>
        <th>Payment status</th>
        <th>Order status</th>
        <th>User name</th>  
        <th>Total</th>   
        <th>Update status</th>
      </tr>   
    </thead>   
    <tbody id = "orders">  
      <% @orders.each do|order|%>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.transaction_id %></td>
        <td><%= order.created_at.to_date %></td>
        <td><%= order.payment %></td>
        <td><%= order.order_status %></td>   
        <td><%= order.user.name %></td>
        <td>&#8377; <%= order.amount %></td>
        <td><%= link_to "Tracking Update", admin_order_path(order) %></td> 
      </tr>
      <% end %>    
    </tbody>   
  </table>
  <div align="center"><%= link_to "Back", admin_index_path %></div>
  <div style="float: right"><%= will_paginate @orders, :class => 'page' %></div>
</div>  

  