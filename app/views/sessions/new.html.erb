<body >
<div class="container" >
  <div class="form-horizontal no-border form"  style ="margin-top:0px; width: 450px;"align="center" >
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

     <h2 align="center">Sign in </h2>
      <div class="form-group">
        <div class="col-sm-12">
          <%= f.label :email %>
           <span class="err"><%= resource.errors[:email].join('. ') %></span>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",class: 'form-control'%>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-12">
          <%= f.label :password %>
           <span class="err"><%= resource.errors[:password].join('. ') %></span><br />
          <%= f.password_field :password, autocomplete: "current-password",class: 'form-control'%>
        </div>
      </div>


      <div class="form-group">
          <div class="col-sm-12">
        <%= hidden_field_tag :redirect_to, params[:redirect_to] %>
        <%= f.submit "Log in", class: 'submitBtn btn btn-block btn-success btn', id:'sign_in' %>
      </div>
      </div>
      
      <div class="clearfix" style="width: 350px;">
         <%= f.check_box :remember_me %> <%= f.label :remember_me %>
            <%= link_to "Forgot password?", new_user_password_path, :class => 'forgot_pwd'%>
      </div>
     


    <p align = "center">or</p>
      
   
    <div class="form-group" >
      <div class="col-sm-12">
        <%= link_to "Sign in with Google", user_google_oauth2_omniauth_authorize_path, class: 'submitBtn btn btn-google btn-block btn-danger btn'%>

        </div>
    </div>
    <div class="form-group" >
      <div class="col-sm-12">
        <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path ,class: 'submitBtn btn  btn-block btn-primary btn'%></div>
    </div>
    <% end %>
    <%= link_to "Create your account", new_user_registration_path%>
  </div>

</div> 
 </body>
<style type="text/css">
  .form-group{
    width:356px;
  }

  .form{
    background-color: #f3f2f4;

    padding-top: 30px;
    padding-bottom: 50px;
  }
  .col-sm-12{
    padding-left: 0px;
    padding-right: 0px;
  }

  

  #user_remember_me{
    margin-right:0px;
  }
  .forgot_pwd{
    padding-left: 90px;
  }
  .error{
    color: red;
  }
</style>


